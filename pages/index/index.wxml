<!-- 头部搜索框 -->
<van-nav-bar
  left-text=""
  right-text=""
  fixed
  bind:click-left="onClickLeft"
  safe-area-inset-top
  border="{{false}}"
>
  <view slot="left" class="topleft">
    <image src="../../image/1首页/xiaoxi.png"></image>
    消息
  </view>
  <view slot="title"  class="toptit">
    <image src="../../image/1首页/sousuo.png" class='topimg'></image>
    <input  bindinput="bindKeyInput" placeholder="输入要搜索的商品" />
  </view> 
</van-nav-bar>
<!-- Tab标签页 -->
<view class="tabpage">
  <van-tabs active="{{ active }}" bind:change="onChange" color='#029a47' class='color'>
    <van-tab title="推荐" data-column='column1'>
    <!-- 推荐 -->
    <!-- 轮播图 -->
      <view class="swiper-box">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperChange">
          <block wx:for="{{image}}" wx:key="{{index}}">
            <swiper-item>
              <image src="{{item.img_id}}" class="slide-image" />
            </swiper-item>
          </block>
        </swiper>
        <view class="dots"> 
            <block wx:for="{{image}}" wx:key="{{index}}"> 
              <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view> 
            </block> 
          </view>
      </view>
      <!--  新人特惠等  -->
      <view class="nav">
        <view class="oneof" wx:for='{{nav}}' wx:key='{{index}}' catchtap="getnav" data-item="{{item}}" catchtap="getnav">
          <image src="{{item.img}}"></image>
          <view>{{item.title}}</view>
        </view>
      </view>
      <!-- 热卖店铺等 -->
      <view class="storename">
        <view class="storename_box {{index==2?'pink':''}} {{index==3?'bluew':''}}"  wx:for='{{shop}}' wx:key='{{index}}' catchtap="getshop" data-item="{{item}}" data-index="{{index}}">
          <view class="storetitle">{{item.title}}</view>
          <view class="storetxt">{{item.content}}</view>
          <image src="{{item.img}}"></image>
        </view>
      </view>
      <!-- 抢购时间 -->
      <view class="limitedtime" >
        <view class="all">
          <view class="time_box" wx:for='{{limitedtime}}' wx:key='{{index}}' catchtap="flashsale" data-time="{{index}}">
            <view class="time {{time==index?'timecolor':''}}">{{item.time}}</view>
            <view class="title {{time==index?'bor timecolor':''}}">{{item.title}}</view>
          </view>
        </view>
      </view>
      <!-- 产品 -->
      <view class="product_less">
        <view class="product_box" wx:for='{{product}}' wx:key='{{index}}'>
          <image src="../../image/1首页/chanpin@2x.png"></image>
          <view class="product">
            <view class="productname">{{item.productname}}</view>
            <view class="text">{{item.text}}</view>
            <view class="box"><text class="temai">特卖</text><text class="zhijiang">直降</text></view>
            <view class="big_box">
              <view class="Price">
                <view class="money">￥{{item.money}}</view>
                <view class="addmoney">赚￥{{item.addmoney}}</view>
              </view>
              <view class="botton">
                <text class="quick">马上抢</text>
                <text class="share">分享赚</text>
              </view>
            </view>
          </view>
        </view>
        <view class="lookatall">查看全部
          <image src="../../image/1首页/youjiantou2@2x.png"></image>
        </view>
      </view>
        <!-- 热销 -->
      <view class="sellwell_box">
        <view class="sellwell">热销 </view>
        <view class="sellwellproduct" wx:for='{{sellwellbox}}' wx:key='{{index}}'>
          <image class="sellwelltitleimg" src='{{item.ad}}'></image>
          <view class="sellwellintroduce" wx:for='{{item.list}}' wx:key='{{index}}' wx:for-item='sellwell'>
            <image class="product_img" src="{{item.ad}}"></image>
            <view class="product_right">
              <view class="producttitle">{{sellwell.title}}</view>
              <view class="producttxt">{{sellwell.short_title}}</view>
              <view class="weight">{{sellwell.pic}}</view>
              <view class="product_bottom">
                <view class="sellwellmoney">￥{{sellwell.price}}<text>￥{{sellwell.original_price}}</text></view>
                <image src="../../image/1首页/tianjia.png"></image>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="gouwuche">
        <image src="../../image/1首页/gouwuche.png" ></image>
        <view wx:if='{{sign>0?true:false}}'>{{sign}}</view>
      </view>
      
    
    
    </van-tab>
    <van-tab title="精准扶农">
    <!-- 精准扶农 -->
    <!-- 轮播图 -->
      <view class="swiper-box">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperChange">
          <block wx:for="{{image}}" wx:key="{{index}}">
            <swiper-item>
              <image src="{{item.img_id}}" class="slide-image" />
            </swiper-item>
          </block>
        </swiper>
        <view class="dots"> 
            <block wx:for="{{image}}" wx:key="{{index}}"> 
              <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view> 
            </block> 
          </view>
      </view> 
    <!-- Tab标签页 -->
    <van-tabs active="{{ active1 }}" color='#029a47' class='color'>
      <van-tab title="中央馆"></van-tab>
      <van-tab title="江西馆"></van-tab>
      <van-tab title="陕西馆"></van-tab>
      <van-tab title="河北馆"></van-tab>
      <van-tab title="新疆馆"></van-tab>
    </van-tabs>
      <!-- 地方特色 -->
     <view class="characteristic">
      <view class="addresscharacteristic">地方特色扶农</view>
      <image src="../../image/1首页/difangtesefunong.png" class="characteristic_img"></image>
      <view class="both">
        <view class="left_box">
          <view class="title">藏地扶农大礼包</view>
          <view class="content">一个礼包</view>
          <view class="content">寄托着80万</view>
          <view class="content">贫困人口的幸福梦</view>
          <image src="../../image/1首页/dalibao.png"></image>
        </view>
         <view class="left_box right_box">
          <view class="title">藏地扶农大礼包</view>
          <view class="content">一个礼包</view>
          <view class="content">寄托着80万</view>
          <view class="content">贫困人口的幸福梦</view>
          <image src="../../image/1首页/dalibao.png"></image>
        </view>
      </view>
    </view> 
      <!-- 产品 -->
       <view class="specialty_box">
        <view class="specialty" wx:for='{{specialty}}' wx:key='{{index}}'>
          <view class="address">
            <view>特色扶农馆<text>丨{{item.city}}</text></view>
            <image src="../../image/1首页/guan.png"></image>
          </view>
          <image src="{{item.img}}" class="specialty_img"></image>
          <view class="cityshi">【{{item.cityshi}}】</view>
          <view class="specialtyname">{{item.specialtyname}}</view>
        </view>
      </view>
    </van-tab>
    <van-tab title="振兴乡村"></van-tab>
    <van-tab title="品质生活"></van-tab>
  </van-tabs>
</view>
