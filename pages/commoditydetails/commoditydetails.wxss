/* pages/commoditydetails/commoditydetails.wxss */
page{
  width: 100%;
  height: 100%;
  background: #f2f3f8;
}
/* 图片 */
.img{
  width: 100%；
}
.img image{
  width: 100%;
  height: 604rpx;
}
.swiper_box{
  position: relative;
  width: 100%;
  height: 604rpx;
}
swiper{
  width: 100%;
  height: 100%;
}
swiper image {
  width: 100%;
  height: 100%;
}
/* 价格名称分享按钮等 */
.shop_box{
  height: 260rpx;
  display: flex;
  padding-left: 25rpx;
  padding-bottom: 34rpx;
  background: #fff;
  padding-right: 24rpx;
  box-sizing: border-box;
}
.shop_box .shop_left{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.mianbox{
  display: flex;
  align-items: center;
}
.shop_box .shop_left .mian{
  width: 37rpx;
  height: 58rpx;
  margin-right: 10rpx;
}
.shop_box .shop_left .shopname{
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin: 16rpx 0 17rpx;
  margin-left: 5rpx;
  width: 510rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shop_box .shop_left .text{
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop_box .shop_left .text .shrottitle{
  width: 510rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 分享按钮 */
.shop_box .shop_right{
  width: 120rpx;
  height: 50rpx;
  background: #029a47;
  border-radius: 25rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
}
.shop_box .shop_right image{
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: -3rpx;
} 
.shop_box .shop_left .money{
  color: #029a47;
  font-size: 50rpx;
  font-weight: 800;
}
.shop_box .shop_left .money text{
  font-size: 28rpx;
  color: #808080;
  font-weight: normal;
}
.shop_box .shop_left .money .oldmoney{
  text-decoration: line-through;
  margin-left: 24rpx;
  margin-right: 59rpx;
}

/* 地址 */
.addassemble{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  align-items: center;
  background: #fff;
  margin-top: 19rpx;
  padding: 0 28rpx;
}
.addassemble .assemble{
  color: #808080;
}
.addassemble .assemble text{
  margin-left: 21rpx;
}
.addassemble image{
  width: 17rpx;
  height: 31rpx;
}
/* 产品保证 */
.performance_box{
  display: flex;
  font-size: 28rpx;
  height: 88rpx;
  align-items: center;
  background: #fff;
  margin: 19rpx 0;
  padding: 0 28rpx;
}
.performance_box .performance{
    display: flex;
    align-items: center;
    color: #333;
}
.performance_box .performance image{
  width: 40rpx;
  height: 40rpx;
}
.performance_box .performance text{
  margin: 0 20rpx;
}
/* 评论 */
.comment_top{
  padding: 0 25rpx;
  box-sizing: border-box;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333333;
  font-size: 28rpx;
  background: #fff;
}
.comment_top image{
  width: 17rpx;
  height: 31rpx;
}
.comment_box{
  height: 344rpx;
  padding-left: 24rpx;
  padding-top: 7rpx;
  padding-bottom: 23rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 19rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}
.comment_box .coment_user{
  display: flex;
  align-items: center;
}
.comment_box .coment_user image{
  width: 59rpx;
  height: 59rpx;
  border-radius: 50%;
}
.comment_box .coment_user view{
  font-size: 28rpx;
  color: #333333;
  margin: 19rpx;
}
.comment_box .comment_content{
  font-size: 28rpx;
  color: #333333;
  width: 500rpx;
}
.comment_box .img{
  display: flex;
}
.comment_box .img image{
  width: 157rpx;
  height: 157rpx;
  background: #808080;
}
.comment_box .comment_time{
  font-size: 24rpx;
  color: #808080;
}
/* 商品详情 */
.shopdetails{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #808080;
  font-size: 28rpx;
  background: #fff;
}
.shopdetails  image{
  width: 100%;
  height: 893rpx;
  margin-bottom: 98rpx;
}
/* 商品导航 */
.shopnav{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  font-size: 24rpx;
  color: #fff;
  background: #fff;
  display: flex;
}
.shopnav .shopandsc{
  width: 122rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  color: #808080;
  padding: 24rpx 0;
  box-sizing: border-box;
  border-right: 2rpx solid #b3b3b3;
}
.shopnav .shopandsc image{
  width: 40rpx;
  height: 40rpx;
}
.shopnav .savemoney{
  width: 253rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  background: #00a2ff;
}
.shopnav .savemoney view{
  font-size: 34rpx;
}
.shopnav  .opengroup{
  background: #029a47;
}
/* 分享弹框 */
.share_box{
  background: #fff;
  height: 588rpx;
  padding-top: 70rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #1a1a1a;
  position: relative;
}
.share_box .share_money{
  font-size: 34rpx;
  color: #029a47;
}
.send{
  margin: 10rpx 0 ;
}
.share_box  .share_less{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 75rpx;
}
.share_box  .share_less .share{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.share_box  .share_less .share image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.share_box  .share_less .share view{
  font-size: 28rpx;
  color: #333333;
  margin-top: 21rpx;
}
.close{
  width: 100%;
  height: 97rpx;
  text-align: center;
  line-height: 97rpx;
  border-top: 1rpx solid #ccc;
  font-size: 28rpx;
  color: #333333;
  position: absolute;
  bottom: 0;
  left: 0;
}
/* 弹出层 */
.payfor{
  display: flex;
  flex-direction: column;
}
.payfor .top{
  height: 187rpx;
  padding-bottom: 35rpx;
  padding-left: 20rpx;
  padding-right: 25rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.payfor .top .product_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-top: -47rpx;
  background: #fff;
  margin-right: 21rpx;
}
.payfor .top .payfor_ringt{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.payfor .top .payfor_ringt .closebtn{
  display: flex;
  justify-content: flex-end;
  position: absolute;
  right: 0;
  top: 25rpx;
}
.payfor .top .payfor_ringt .closebtn image{
  width: 22rpx;
  height: 22rpx;
}
.payfor .top .payfor_ringt .pay_txt{
  font-size: 34rpx;
  color: #029a47;
  line-height: 35rpx;
  display: flex;
}
.payfor .top .payfor_ringt .pay_txt view{
  font-size: 24rpx;
  color: #4d4d4d;
  margin-left: 20rpx;
  text-decoration: line-through;
}
.payfor .middle{
  padding: 26rpx  0 0 25rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #f5f1f0;
}
.payfor .middle .title{
  color: #808080;
  font-size: 24rpx;
  margin-left: -7rpx;
  margin-bottom: 16rpx;
}
.payfor .middle .specifications_box{
  display: flex;
  flex-wrap: wrap;
}
.payfor .middle .specifications_box view{
  padding:0 24rpx ;
  height: 45rpx;
  text-align: center;
  line-height: 45rpx;
  border-radius: 4rpx;
  border: 2rpx solid #cccccc;
  font-size: 20rpx;
  color: #333333;
  margin:0 40rpx  33rpx 0;
}
.payfor .tottom{
  border-top: 1rpx solid #f5f1f0;
  padding: 26rpx  0 0 25rpx;
  height: 335rpx;
  display: flex;
  padding-left: 19rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.payfor .tottom .title{
  color: #808080;
  font-size: 24rpx;
}
.payfor .getorderbtn{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #029a47;
  color: #fff;
  font-size: 34rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}
.payfor .getorderbtn .quzc{
  width: 50%;

}
.payfor .getorderbtn  .back{
  background: #00A2FF;
}
.bor{
  background: #029a47 !important;
  color: #ffffff !important;
}