page{
  width: 100%;
  height: 100%;
  background: #f2f3f8;
}

.box{
  display: flex;
  justify-content: center;
}
/* 搜索框 */
.search_box{
  margin-top: 24rpx;
  height: 60rpx;
  display: flex;
  line-height: 60rpx;
}
.search_box input{
  width: 575rpx;
  height: 60rpx;
  padding-left: 24rpx;
  border-radius: 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #808080;
}
.search_box .search{
  color: #029a47;
  font-size: 28rpx;
  margin-left: 22rpx;
}
/* 历史记录 */
.history{
  width: 100%;
  padding: 0 26rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-top: 34rpx;
}
.history view{
  font-size: 28rpx;
  color: #333;
}
.history image{
  width: 40rpx;
  height: 39rpx;
}
.history_box {
  width: 100%;
  padding-left:  26rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.history_box .HistoricalRecords{
  display: inline-block;
  padding: 20rpx;
  font-size: 24rpx;
  color: #333;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 29rpx;
}