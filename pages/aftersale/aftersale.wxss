/* pages/aftersale/aftersale.wxss */
page{
  background: #F2F3F8;
}
.shop{
  padding: 22rpx 75rpx 22rpx 17rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background: #fff;
}
.shop image{
  width: 117rpx;
  height: 117rpx;
  border-radius: 10rpx;
  margin-right: 19rpx;
}
.shop .shop_right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
}
.shop .shop_right .productname{

  color: #333333;
}
.shop .shop_right  .shopname{
  color: #808080;
}
.shop .shop_right  .money{
  color: #029a47;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.Apply{
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 24rpx 0 38rpx;
  box-sizing: border-box;
  background: #fff;
}
.problem{
  width: 100%;
  height: 383rpx;
  padding: 31rpx 31rpx 18rpx 25rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.problem .title{
  color: #333333;
  margin-bottom: 10rpx;
}
.problem textarea{
  color: #b1b1b1;
}
.problem .number{
  color: #b1b1b1;
  text-align: right;
}
/* 上传图片 */
.upload{
  width: 100%;
  height: 393rpx;
  padding: 31rpx 24rpx 26rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #7e7e7e;
  background: #fff;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.upload .uploadpictures{
  color: #333333;
  font-size: 28rpx;
}
.add{
  width: 160rpx;
  height: 160rpx;
  position: relative;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.add image{
  width: 100%;
  height: 100%;
}
.add .add_text{
  width: 160rpx;
  text-align: center;
  font-size: 24rpx;
  color: #7e7e7e;
  position: absolute;
  bottom: 9rpx;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.add .add_text text{
  font-size: 20rpx;
}
/* 确认按钮 */
.btn{
  height: 86rpx;
  text-align: center;
  line-height: 86rpx;
  background: #029a47;
  color: #fff;
  font-size: 32rpx;
}