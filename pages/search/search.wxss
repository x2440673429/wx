/* pages/search/search.wxss */

page{
  background: rgb(242,243,248);
}
/* 搜索 */
.searchinput{
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 24rpx 0 19rpx 0;
}
.searchinput input{
  width: 575rpx;
  height: 60rpx;
  border-radius: 15rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: rgb(25,25,25);
  background: #fff;
}
.searchinput text{
  font-size: 28rpx;
  color: #029a47;
  margin-left: 22rpx;
  line-height: 60rpx;
}
/* tab标签 */
.tabnav{
  width: 100%;
}
.van-tabs__line {
  height: 2rpx;
}
/* 内容 */
.product{
  width: 100%;
  display: flex;
  flex-wrap: wrap; 
  justify-content: center;
}
.product .Oneoftheproducts{
  width: 339rpx;
  padding: 19rpx 0;
  background: #fff;
  margin-top: 20rpx;
}
.product .Oneoftheproducts:nth-child(even){
  margin-left: 23rpx;
}
.product .Oneoftheproducts .log{
  width: 100%;
  height: 274rpx;
}
.product .Oneoftheproducts .name{
  font-size: 28rpx;
  color: #333333;
  margin: 16rpx 0 33rpx;
  padding-left: 20rpx;
}
.product .Oneoftheproducts .money{
  font-size: 28rpx;
  color: #029a47;
  padding-left: 16rpx;
  font-weight: 900;
  box-sizing: border-box;
}
.product .Oneoftheproducts .money text{
  font-size: 20rpx;
  color: #b3b3b3;
  margin: 0 69rpx 0 21rpx;
}
.product .Oneoftheproducts .money image{
  width: 30rpx;
  height: 27rpx;
}