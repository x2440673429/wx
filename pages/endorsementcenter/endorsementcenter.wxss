/* pages/endorsementcenter/endorsementcenter.wxss */
page{
  background: #F2F3F8;
}
.my_box{
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
  padding: 29rpx 39rpx;
  box-sizing: border-box;
  background: #fff;
}
.my_box .head{
  width: 113rpx;
  height: 113rpx;
  border-radius: 50%;
}
.my_box .endorsement{
  width: 180rpx;
  height: 49rpx;
  position: relative;
  margin-top: 25rpx;
}
.my_box .endorsement image{
  width: 100%;
  height: 100%;
}
.my_box .endorsement  .firstlevel{
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  right: 21rpx;
  top: 50%;
  margin-top: -16rpx;
}
.my_box  .rule{
  position: absolute;
  right: 39rpx;
  top: 29rpx;
  color: #1a1a1a;
  font-size: 24rpx;
}
/* 提现框 */
.Cash_box{
  height: 150rpx;
  padding: 44rpx 63rpx 35rpx 67rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.Cash_box .Cash{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.Cash_box .Cash .money{
  color: #029a47;
  font-size: 40rpx;
}
.Cash_box .Cash  .yes{
  font-size: 24rpx;
  color: #808080;
}
.Cash_box  .tixian{
  width: 80rpx;
  height: 40rpx;
  background: #029a47;
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
}
/* 团队人数 */
.number_box{
  width: 700rpx;
  height: 150rpx;
  background: #fff;
  margin: 21rpx  auto 0;
  display: flex;
  justify-content: space-around;
  padding: 34rpx 0;
  box-sizing: border-box;
  position: relative;
}
.number_box .team{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.number_box .team .number{
   color: #029a47;
  font-size: 40rpx;
}
.number_box .team  .teamnumber{
  font-size: 24rpx;
  color: #808080;
}
.number_box .bor{
  height: 24rpx;
  border-right: 2rpx solid #808080;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -12rpx;
  margin-left: -1rpx;
}
.number_box image{
  width: 9rpx;
  height: 16rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 10rpx;
}
/* 分享按钮 */
.share{
  width: 550rpx;
  height: 88rpx;
  background: #029a47;
  border-radius: 10rpx;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  line-height: 88rpx;
  margin: 147rpx auto 0;
}
/* 规则弹出框 */
.rule_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 59rpx 85rpx 134rpx 80rpx;
  box-sizing: border-box;
}
.rule_box .title{
  font-size: 34rpx;
  color: #1a1a1a;
  font-weight: bold;
  margin-bottom: 35rpx;
}
.rule_box .content{
  width: 544rpx;
  font-size: 34rpx;
  color: #1a1a1a;
}
.rule_box image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}