/* pages/Selection/Selection.wxss */
page{
  background: #F2F3F8;
}
/* 甄选砍价 */
.top{
  width: 100%;
  height: 353rpx;
  margin-bottom: 32rpx;
}
.top image{
  width: 100%;
  height: 100%;
}
/* 正在进行中 */
.inprogress{
  height: 88rpx;
  display: flex;
  justify-content: center;
  background: #029a47;
  align-items: center;
  color: #fff;font-size: 34rpx;
}
.small{
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 50%;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
.normal{
  width: 9rpx;
  height: 9rpx;
  background: #fff;
  border-radius: 50%;
}

.big{
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
/* 时间 */
.remainingtime{
  display: flex;
  align-items: center;
  color: #7f7f7f;
  font-size: 24rpx
}
.remainingtime .time{
  width: 40rpx;
  height: 40rpx;
  border-radius: 5rpx;
  background: #7f7f7f;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
}
.remainingtime .end{
  margin-left: 20rpx;
}
/* 产品 */
.product_box{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.product{
  width: 100%;
  height: 272rpx;
  padding: 30rpx 26rpx 35rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.product image{
  width: 206rpx;
  height: 206rpx;
  margin-right: 44rpx;
}
.product .product_txt{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product .product_txt .name{
  font-size: 28rpx;
  color: #1a1a1a;
}
.product .product_txt .text{
  font-size: 20rpx;
  color: #4d4d4d;
  width: 393rpx;
  line-height: 27rpx;
}
.Chop{
  font-size: 20rpx;
  color: #b3b3b3;
}
.Chop text{
  color: #029a47;
}
.product .product_txt .send{
  font-size: 28rpx;
  color: #029a47;
  font-weight: 700;
  display: flex;
  align-items:flex-end;
  justify-content: space-between;
}
.product .product_txt .send .number{
  font-size: 34rpx;
}
.product .product_txt .send .click{
  display: inline-block;
  border-radius: 25rpx;
  width: 164rpx;
  height: 50rpx;
  background: #029a47;
  color: #fff;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
}
