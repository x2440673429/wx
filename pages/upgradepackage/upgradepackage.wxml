<!--pages/upgradepackage/upgradepackage.wxml-->
<!-- 顶部图片 -->
<view class="top">
  <image src="../../image/img/shengjilibao.png"></image>
</view>

<!-- 产品 -->

  <view class="product" wx:for='{{product}}' wx:key='{{index}}'>
    <image src="{{item.pic}}"></image>
    <view class="product_txt">
      <view>
        <view class="name">{{item.title}}</view>
        <view class="text">{{item.text}}</view>
      </view>
      <view class="bottom">
        <view class="money">￥{{item.price}}</view>
        <view class="shopping">购买升级</view>
      </view>
    </view>
  </view>
