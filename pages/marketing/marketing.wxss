/* 评分 */
.title{
  display: flex;
  align-items: center;
}
.title van-rate{
  display: flex;
  align-items: center;
}
.big_img{
  width: 401rpx;
  height: 530rpx;
  margin-bottom: 35rpx;
  margin-top: 41rpx;
}
.big_img image{
  width: 100%;
  height: 100%;
}