/* pages/marketing/marketing.wxss */
page{
  background: #F2F3F8;
}
/* 图片 */
.img{
  width: 100%;
  height: 200rpx;
}
.img image{
  width: 100%;
  height: 100%;
  background: #fff;
}
/* 文章 */
.Article{
  width: 100%;
  padding: 23rpx 19rpx 20rpx 29rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 20rpx;
}
.Article .shop{
  display: flex;
  justify-content: space-between;
  margin-bottom: 23rpx;
}
.Article .shop .info{
  display: flex;
  align-items: center;
}
.Article .shop .info image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #029a47;
}
.Article .shop .info .shopname{
  font-size: 24rpx;
  color: #1a1a1a;
  margin-left: 22rpx;
}
.Article .shop .number{
  font-size: 24rpx;
  color: #b3b3b3;
}
.Article .content{
  width: 701rpx;
  height: 128rpx;
  color: #1a1a1a;
  font-size: 24rpx;
}
.contenttext{
  text-indent:30rpx;
}
.Article  .open{
  font-size: 24rpx;
  color: #029a47;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.Article .open image{
  width: 16rpx;
  height: 9rpx;
}
/* 文章图片 */
.content_img{
  width: 100%;
  margin-bottom: 26rpx;
  display: flex;
  flex-wrap: wrap;
}
.content_img view{
  width: 220rpx;
  height: 220rpx;
  margin-right: 18rpx;
  margin-top: 19rpx;
}
 
.content_img view image{
  width: 100%;
  height: 100%;
}
.content_img view:nth-child(3n+3){
  margin-right: -18rpx;
}
/* 商品 */
.shop_box{
  width: 699rpx;
  height: 160rpx;
  padding: 20rpx 12rpx; 
  box-sizing: border-box;
  display: flex;
  background: #f2f3f8;
  border-radius: 10rpx;
}
.shop_box image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 21rpx;
}
.shop_box .right_box{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shop_box .right_box .shoptitle{
  font-size: 24rpx;
  color: #1a1a1a;
}
.shop_box .right_box .money{
  font-size: 24rpx;
  color: #1a1a1a;
}
.shop_box .right_box .money text{
  color: #029a47;
}
/* 按钮 */
.botton{
  display: flex;
  justify-content: space-around;
  margin-top: 21rpx;
}
.botton .download{
  width: 202rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #808080;
  border: 1rpx solid #808080;
  border-radius: 10rpx;
}
.botton .onekey{
   width: 202rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background: #029a47;
  border-radius: 10rpx;
}
