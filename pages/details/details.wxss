/* pages/details/details.wxss */

page{
  width: 100%;
  height: 100%;
  background: #f2f3f8;
}
/* 图片 */
.img{
  width: 100%；
}
.img image{
  width: 100%;
  height: 604rpx;
}
/* 价格名称分享按钮等 */
.shop_box{
  width: 100%;
  height: 260rpx;
  display: flex;
  padding-left: 25rpx;
  box-sizing: border-box;
  background: #fff;
}
.shop_box .shop_left{
  width: 566rpx;
  height: 260rpx;
}
.shop_box .shop_left .shopname{
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin: 25rpx 0 32rpx;
}
.shop_box .shop_left .text{
  font-size: 28rpx;
  color: #333;
}
.shop_box .shop_left .money{
  color: #029a47;
  font-size: 50rpx;
  margin-top: 70rpx;
  font-weight: 800;
}
.shop_box .shop_left .money text{
  font-size: 28rpx;
  color: #808080;
  font-weight: normal;
}
.shop_box .shop_left .money .oldmoney{
  text-decoration: line-through;
  margin-left: 24rpx;
  margin-right: 59rpx;
}
/* 分享按钮 */
.shop_box .shop_right{
  width: 120rpx;
  height: 50rpx;
  background: #029a47;
  border-radius: 25rpx;
  color: #fff;
  margin-top: 77rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
}
.shop_box .shop_right image{
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: -3rpx;
} 
