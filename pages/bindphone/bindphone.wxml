<view class="box">
  <view class="cell1">
    <text>手机号码</text>
    <input bindinput='getPhoneValue' type="check_user" value='{{phone}}' placeholder="请输入手机号码" />
  </view>
  <view class="cell2">
    <view class="cell3">
      <text>短信验证</text>
      <input  placeholder="请输入验证码" bindinput='getCodeValue' />
    </view>
    <view class="btmcode" bindtap='getVerificationCode' disabled='{{disabled}}'value='{[code]}' >获取验证码</view>
  </view>
</view>

<view class="box2">
  <view class="btm2"  bindtap='save'>确认绑定</view>
</view>