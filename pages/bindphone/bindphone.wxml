<view class="box">
  <view class="cell1">
    <text>手机号码</text>
    <input bindinput="bindKeyInput" placeholder="请输入手机号码"  value="{{inputValue}}" maxlength='11'/>
  </view>
  <view class="cell2">
    <view class="cell3">
      <text>短信验证</text>
      <input bindinput="bindcode" placeholder="请输入验证码"  value="{{code}}" maxlength='6'/>
    </view>
    <view class="btmcode" catchtap="getcode">{{type}}</view>
  </view>
</view>

<view class="box2">
  <view class="btm2" catchtap="binding">确认绑定</view>
</view>