/* pages/applystore/applystore.wxss */
page{
  background: #F2F3F8;
  padding: 0  26rpx;
  box-sizing: border-box;
}
.title{
  font-size: 24rpx;
  color: #878787;
  margin: 21rpx 0;
}
.optionbox{
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 29rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #878787;
}
.optionbox image{
  width: 16rpx;
  height: 9rpx;
}
.optionbox input{
  width: 100%;
}
/* 上传证件 */
.certificates{
  display: flex;
  flex-wrap: wrap;
  padding-left: 25rpx;
  box-sizing: border-box;
}
.sczj{
  width: 288rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sczj:nth-child(odd){
  margin-right: 69rpx;
}
.sczj image{
  width: 100%;
  height: 170rpx;
  border-radius: 10rpx;
}
.sczj .becareful{
  font-size: 24rpx;
  color: #878787;
  margin: 20rpx 0;
}
.sczj .becareful text{
  color: #029a47;
}
/* 协议 */
.Agreement{
  display: flex;
  padding-left: 27rpx;
  box-sizing: border-box;
  align-items: center;
  margin: 60rpx 0 68rpx;
}
.Agreement image{
  width: 40rpx;
  height: 40rpx;
}
.Agreement view{
  font-size: 24rpx;
  color: #191919;
  margin-left: 20rpx;
}
.Agreement view text{
  color: #029a47;
}
/* 提交 */
.btn{
  width: 572rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  background: #029a47;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin: 0 auto 87rpx; 
}