/* 店铺产品 */
.shop{
  width: 704rpx;
  padding: 29rpx 20rpx 46rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 104rpx;
}
.shop .shopname{
  font-size: 28rpx;
  color: #333333; 
  margin-bottom: 40rpx;
}
.shop  .business_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.shop  .business_box .business{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.shop  .business_box .business image{
  width: 30rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.shop  .business_box .state{
  color: #029a47;
  font-size: 28rpx;
}
.shop .productbox{
  display: flex;
  margin-bottom: 68rpx;
}
.shop .productbox image{
  width: 118rpx;
  height: 118rpx;
  margin-right: 21rpx;
}
.shop .productbox  .productright{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shop .productbox  .productright .productname{
  font-size: 28rpx;
  color: #333333;
}
.shop .productbox  .productright .text{
  font-size: 24rpx;
  color: #808080;
}
.shop .productbox  .productright .bottom{
  display: flex;
  justify-content: space-between;
}
.shop .productbox  .productright .bottom .money{
  color: #029a47;
  font-size: 28rpx;
}
.shop .productbox  .productright .bottom  .number{
  font-size: 26rpx;
  color: #333333;
}
.shop .message{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 50rpx;
  align-items: center;
}
.shop .message .title{
  color: #333333;
}
.shop .message input{
  color: #808080;
  width: 222rpx;
}
.shop .money{
  font-size: 28rpx;
  color: #029a47;
  text-align: right;
  font-weight: bold;
}
.shop .btn{
  display: flex;
  justify-content: flex-end;
  margin-top: 37rpx;
}
.shop .btn .logistics_btn{
  width: 170rpx;
  height: 60rpx;
  color: #333333;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #333333;
}
.shop .btn .confirm_btn{
  width: 170rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  color: #fff;
  background: #029a47;
  margin-left: 20rpx;
}