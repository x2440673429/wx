/* pages/orderone/orderone.wxss */
page{
  background: #F2F3F8;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
/* 顶部订单状态 */
.orderstate_box{
  width: 702rpx;
  height: 217rpx;
  padding: 18rpx 16rpx 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #fff;
  margin-top: 20rpx;
}
.orderstate_box .orderstate{
  font-size: 28rpx;
  color: #333333;
}
.orderstate_box .orderstate text{
  color: #029a47;
}
.orderstate_box .ordernumber_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}
.orderstate_box .ordernumber_box .ordernumber{
  font-size: 28rpx;
}
.orderstate_box .ordernumber_box .copy{
  width: 100rpx;
  height: 50rpx;
  border-radius: 10rpx;
  border: 1rpx solid #333;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
}
.orderstate_box .ordertime{
  font-size: 28rpx;
  color: #333333;
}
.orderstate_box .Paymentmethod{
  font-size: 28rpx;
  color: #333333
}
/* 订单联系人 */
.top_box{
  width: 702rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #fff;
  padding: 20rpx 0 29rpx;
  box-sizing: border-box;
  margin: 20rpx 0 ;
}
.top_box .user{
  padding-left: 21rpx;
  padding-right: 61rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.top_box .useraddress{
  display: flex;
  padding: 0 72rpx 0 25rpx;
  box-sizing: border-box;
  /* position: relative; */
  margin-top: 6rpx;
}
.top_box .useraddress .addressimg{
  width: 30rpx;
  height: 39rpx;
}
.top_box .useraddress view{
  width: 559rpx;
  font-size: 28rpx;
  color: #333333;
  margin-left: 11rpx;
}
