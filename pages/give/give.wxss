/* pages/give/give.wxss */
page{
  background: #F2F3F8;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.give_box{
  width: 701rpx;
  height: 303rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 28rpx 24rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.give_box .give_user{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.give_box .give_user .user_box{
  color: #333333;
  font-size: 34rpx;
  display: flex;
  align-items: center;
}
.give_box .give_user .user_box image{
  width: 62rpx;
  height: 62rpx;
  margin-right: 33rpx;
}
.give_box .give_user .user_box .givewho{
  width: 194rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.give_box .give_user .time{
  font-size: 28rpx;
  color: #b1b1b1;
}
.give_box .give_product{
  display: flex;
  justify-content: space-between;
}
.give_box .give_product image{
  width: 112rpx;
  height: 112rpx;
  margin-right: 19rpx;
}
.give_box .give_product .product{
  height: 112rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  font-size: 28rpx;
}
.give_box .give_product .product .productname{
  color: #333333;
}
.give_box .give_product .product .producttxt{
  color: #b1b1b1;
}
/* 订单联系人收货地址 */
.top_box{
  width: 702rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #fff;
  padding: 20rpx 0 29rpx;
  box-sizing: border-box;
  margin: 20rpx 0 0;
}
.top_box .user{
  padding-left: 21rpx;
  padding-right: 61rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.top_box .useraddress{
  display: flex;
  padding: 0 72rpx 0 25rpx;
  box-sizing: border-box;
  position: relative;
  margin-top: 6rpx;
}
.top_box .useraddress .addressimg{
  width: 30rpx;
  height: 39rpx;
}
.top_box .useraddress view{
  width: 566rpx;
  font-size: 28rpx;
  color: #333333;
  margin-left: 11rpx;
}
.top_box .useraddress .youjiantou{
  width: 9rpx;
  height: 16rpx;
  position: absolute;
  top: 14rpx;
  right: 20rpx;
}
/* 激活按钮 */
.btn{
  width: 554rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background: #029a47;
  margin: 57rpx 0 81rpx;
  border-radius: 10rpx;
}
/* 为您推荐 */
.title_box{
  width: 100%;
  height: 40rpx;
  position: relative;
  margin-bottom: 32rpx;
}
.title_box image{
  height: 10rpx;
  width: 30%;
  position: absolute;
  left: 50%;
  margin-left: -15%;
  top: 50%;
  margin-top: -5rpx;
}
.title_box view{
  width: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  position: absolute;
  left: 50%;
  margin-left: -60rpx;
}
/* 推荐的产品 */
.recommended_box{
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.recommended_box .recommended{
  width: 339rpx;
  height: 436rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 21rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.recommended_box .recommended:nth-child(even){
  margin-left: 21rpx;
}
.recommended_box .recommended .recommendedimg{
  width: 100%;
  height: 255rpx;
  background: #F6F9FC;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommended_box .recommended .recommendedimg image{
  width: 232rpx;
  height: 210rpx;
}
.recommended_bottom{
  flex: 1;
  padding: 23rpx 29rpx 22rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recommended_box .recommended .recommendedtitle{
  font-size: 28rpx;
  color: #1a1a1a;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.recommended_box .recommended .recommendedtxt{
  width: 200rpx;
  font-size: 20rpx;
  color: #4d4d4d;
}
.recommended_box .recommended .recommendedmoney{
  font-size: 34rpx;
  color: #029a47;
  font-weight: bold;
}